---
import CallToAction from "./CallToAction.astro";
import Icon from "./Icon.astro";
---

<aside>
  <div class="cta-wrapper">
    <h2 class="text-2xl text-center">Interested in working together?</h2>
    <CallToAction href="mailto:arjun@arjunsingh.tech">
      Send Me a Message
      <Icon icon="paper-plane-tilt" size="1.2em" />
    </CallToAction>
  </div>
</aside>

<style>
  aside {
    border-top: 1px solid var(--gray-800);
    border-bottom: 1px solid var(--gray-800);
    padding: 5rem 1.5rem;
    background-color: var(--gray-999_40);
    box-shadow: var(--shadow-sm);
  }

  .cta-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
  }
  h2 {
    font-size: var(--text-xl);
    text-align: center;
    max-width: 15ch;
  }

  @media (min-width: 50em) {
    aside {
      /* margin-inline: auto; */
      /* max-width: 83rem; */
      padding: 7.5rem;
    }

    .cta-wrapper {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-evenly;
      margin-inline: auto;
      max-width: 83rem;
    }
    h2 {
      font-size: var(--text-3xl);
      text-align: left;
    }
  }
</style>
